{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "esnext",
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "target": "ESNEXT",
    "jsx": "react",
    "types": ["react", "jest"],
    "lib": ["es2018", "dom"],
    "removeComments": false,
    "baseUrl": "src",
    "paths": {
      "src": ["src"],
      "helpers": ["helpers"],
      "components": ["components"],
      "screens": ["screens"],
      "assets": ["assets"],
      "store": ["store"]
    }
  },
  "include": ["./src/**/*"]
}
